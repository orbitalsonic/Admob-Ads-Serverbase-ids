<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.startup.fragments.FragmentStartup">

    <FrameLayout
        android:id="@+id/ads_place_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        tools:visibility="visible"
        android:visibility="invisible"
        android:background="@drawable/bg_ads"
        android:maxHeight="@dimen/_100sdp"
        android:minHeight="@dimen/_50sdp"
        app:layout_constraintHeight_min="@dimen/_50sdp"
        app:layout_constraintHeight_max="@dimen/_100sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <include layout="@layout/loading_ad"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>